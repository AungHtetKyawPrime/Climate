<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#661CD8D2"
            android:backgroundTintMode="src_over"
            android:background="@drawable/land_pollutionthree">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/welcome_2"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If we waste garbages from industries at everywhere , "
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="The Things That Included Chemical
May Die Ecology System"
                    android:textColor="#fff"
                    android:textSize="25dp" />


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@id/welcome_2"
                >
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:id="@+id/news"
                    android:src="@drawable/land_pollution"/>

                <ImageView

                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_below="@id/news"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/land_pollutiontwo"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>