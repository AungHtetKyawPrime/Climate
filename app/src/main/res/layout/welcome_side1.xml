<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#661CD8D2"
            android:backgroundTintMode="src_over"
            android:background="@drawable/slide_one">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/welcome_2"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If we don't waste garbages systematically"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="May Low The Standard Of Living"
                    android:textColor="#fff"
                    android:textSize="25dp" />




            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@id/welcome_2"
                >
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:id="@+id/news"

                    android:src="@drawable/smart_city"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vs"
                    android:id="@+id/vs"
                    android:textColor="#fff"
                    android:layout_toRightOf="@id/news"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    />
                <ImageView

                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_below="@id/news"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"

                    android:src="@drawable/dirty_city"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>